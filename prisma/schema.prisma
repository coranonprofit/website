generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Account {
  id Int @id @default(autoincrement())
  active Boolean

  // Account name and display information
  name String
  username String

  // Login Information
  password String // TODO: decide on a hashing algorithm

  // Contact Information
  email String
  phone String

  // Account permissions and level
  type String

  // The date at which this user was created
  created DateTime @default(now())
}

model AccountLogin {
  timestamp DateTime @id @default(now())
  userId Int
  ipAddress String
  platform String
}
